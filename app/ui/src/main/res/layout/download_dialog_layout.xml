<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_dialog_width"
    android:layout_height="wrap_content"

    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:padding="@dimen/hanvon_20dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/hanvon_16dp"
        android:layout_marginRight="@dimen/hanvon_16dp"
        android:layout_marginBottom="@dimen/hanvon_16dp"
        android:gravity="center"
        android:text="下载文件"
        android:textColor="@color/color_black1"
        android:textSize="@dimen/hanvon_30sp"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_black1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hanvon_20dp"
            android:layout_marginTop="@dimen/hanvon_20dp"
            android:layout_marginRight="@dimen/hanvon_20dp"
            android:lineSpacingExtra="3dp"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:text="持续下载中。。。"
            android:textColor="@color/color_black1"
            android:textSize="@dimen/hanvon_24sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hanvon_20dp"
            android:layout_marginTop="@dimen/hanvon_20dp"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/hanvon_20dp"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.2"
            android:text="持续下载中。。。"
            android:textColor="@color/color_black1"
            android:textSize="@dimen/hanvon_24sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hanvon_20dp"
            android:layout_marginTop="@dimen/hanvon_20dp"
            android:layout_marginRight="@dimen/hanvon_20dp"
            android:lineSpacingExtra="3dp"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:text="下载完成自动关闭请稍等！"
            android:textColor="@color/color_black1"
            android:textSize="@dimen/hanvon_24sp" />
</LinearLayout>































































































