<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:paddingTop="@dimen/mail_item_padding">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/common_dialog_margin"
        android:layout_marginRight="@dimen/common_dialog_margin"
        android:layout_marginBottom="@dimen/common_dialog_margin"
        android:gravity="center"
        android:text="保存文件"
        android:textColor="@color/color_black1"
        android:textSize="@dimen/send_person_textSize"
        android:visibility="visible" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_black1" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/common_dialog_margin"
        android:layout_marginRight="@dimen/common_dialog_margin"
        android:layout_marginBottom="10dp"
        android:maxWidth="@dimen/common_dialog_maxWidth"
        android:maxHeight="@dimen/common_dialog_maxWidth"
        android:src="@drawable/shezhi"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_fujian_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mail_item_padding"
        android:layout_marginTop="@dimen/common_dialog_margin"
        android:layout_marginRight="@dimen/mail_item_padding"
        android:gravity="center|left"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:text=""
        android:textColor="@color/color_black1"
        android:textSize="@dimen/shou_mail_date" />

    <TextView
        android:id="@+id/fujian_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mail_item_padding"
        android:layout_marginRight="@dimen/mail_item_padding"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/mail_item_padding"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:text=""
        android:textColor="@color/color_black1"
        android:textSize="@dimen/shou_mail_date" />
    <TextView
        android:id="@+id/save_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mail_item_padding"
        android:layout_marginRight="@dimen/mail_item_padding"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/mail_item_padding"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:text=""
        android:textColor="@color/color_black1"
        android:textSize="@dimen/shou_mail_date" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="@dimen/common_dialog_margin"
        android:background="@color/color_black1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negtive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingTop="@dimen/common_dialog_margin"
            android:paddingBottom="@dimen/common_dialog_margin"
            android:singleLine="true"
            android:text="取消"
            android:textColor="@color/color_black1"
            android:textSize="@dimen/shou_mail_date" />

        <View
            android:id="@+id/column_line"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/color_black1" />

        <Button
            android:id="@+id/positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingTop="@dimen/common_dialog_margin"
            android:paddingBottom="@dimen/common_dialog_margin"
            android:singleLine="true"
            android:text="确定"
            android:textColor="@color/color_black1"
            android:textSize="@dimen/shou_mail_date" />
    </LinearLayout>
</LinearLayout>































































































